  <script>
    async function postData(url = '', data = {}) {
      const response = await fetch(url, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
      return response.json(); 
    }

    async function getData(url = '') {
      const response = await fetch(url, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json'
        },
      })
      return response.json(); 
    }

    async function deleteData(url = '') {
      const response = await fetch(url, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
      })
      return response.json(); 
    }

    function deleteCart(cartID){
      const clientID = $('#clientID').val()
      var result = confirm('Are you sure to delete the Item?');
      if(result){
        deleteData('/api/cart/'+cartID)
        .then(data => {
          getData('/api/cart/client/'+clientID)
          .then(data => {
            updateCountCart(data)
            updateListCart(data)
          })
        })
      }
    }

    function addToCart(productID){
      const clientID = $('#clientID').val()
      console.log(clientID)
      if(clientID == undefined){
        alert('Login first!')
        window.location.href = '/auth/login'
      }
      else{
        var result = confirm('Are you sure to add to Cart?');
      if(result){
        postData('/api/cart', {
          clientID: clientID,
          productID: productID,
          quantity: 1
        })
          .then(data => {
            getData('/api/cart/client/'+clientID)
            .then(data => {
              updateCountCart(data)
              updateListCart(data)
            })
          });
        }
      }
      
    }

    function updateListCart(data){
      var wrapperTotalCart = $("#wrapperTotalCart"); 
      $(wrapperTotalCart).empty();
      var wrapperCart = $("#wrapperCart"); 
      $(wrapperCart).empty();
      let total = 0
      for (let index = 0; index < data.length; index++) {
        const cart = data[index];
        let mark = ''
        let role = '' 
        if (cart.quantity > 1) { 
          mark = '-fill' 
          role = 'button' 
        } 
        $(wrapperCart).append(
          `
          <tr style="white-space: nowrap;" class="align-middle text-center">
            <th scope="row">${index+1}</th>
            <td>${cart.product.name}</td>
            <td><img src="${cart.product.imageURL}" alt="" height="100px"> </td>
            <td>${cart.product.price}</td>
            <td><a role="${role}" onclick="decrementQuantity('${cart._id}', '${cart.quantity}')"><i class="bi bi-caret-left-square${mark}"></i></a><a>  ${cart.quantity}  <a role="button" onclick="incrementQuantity('${cart._id}', '${cart.quantity}')"><i class="bi bi-caret-right-square-fill"></i></a></a></td>
            <td>${Number(cart.product.price * cart.quantity)}</td>
            <td><button class="btn btn-danger" onclick="deleteCart('${cart._id}')"><i class="bi bi-trash"></i></button></td>
          </tr>
          `
        )
        total+=Number(cart.product.price * cart.quantity)
      }

      $(wrapperTotalCart).append(
        `
        <h5 class="float-end mx-3">Total : Rp${total}</h5><br>
        `
      )
    }

    function updateCountCart(data){
      var cartCount = 0
      data.forEach(cart => {
        cartCount+=cart.quantity
      });
      var wrapperCart = $("#cart-quantity"); 
      $(wrapperCart).empty();
      $(wrapperCart).append(
        `
        ${cartCount}
        `
      )
    }

    function decrementQuantity(cartID, quantity){
      if(quantity <= 1){
        alert('Minimum item quantity!')
      }
      else{
        const clientID = $('#clientID').val()
        postData('/api/cart/update/quantity', {
          cartID: cartID,
          quantity: Number(quantity)-1
        })
        .then(data => {
          getData('/api/cart/client/'+clientID)
            .then(data => {
              updateCountCart(data)
              updateListCart(data)
            })
        })
      }
    }
    function incrementQuantity(cartID, quantity){
      const clientID = $('#clientID').val()
      postData('/api/cart/update/quantity', {
        cartID: cartID,
        quantity: Number(quantity)+1
      })
      .then(data => {
        getData('/api/cart/client/'+clientID)
          .then(data => {
            updateCountCart(data)
            updateListCart(data)
          })
      })
    }

  </script>

