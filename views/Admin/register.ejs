<div class="container">
<div class="forms-container">
  <div class="signin-signup">
    <form action="/auth/register" method="post" class="sign-in-form">
      <a href="/" class="mt-5" align="center">
        <img src="/img/logo.png" class="mt-3" width="30%" alt="">
      </a>
      <h2 class="title">Sign Up</h2>
      <% include ./../partials/messages %> 
  <div class="row">
    <div class="col-md-12" align="center">
      <div class="input-field">
        <i class="fas fa-user"></i>
        <input type="text" name="name" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-user"></i>
        <input type="text" name="phone" placeholder="Phone" value="<%= typeof phone != 'undefined' ? phone : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-envelope"></i>
        <input type="text" name="company" placeholder="Company" value="<%= typeof company != 'undefined' ? company : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-envelope"></i>
        <input type="text" name="address" placeholder="Address" value="<%= typeof address != 'undefined' ? address : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <input type="password" name="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <input type="password" name="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <input type="text" name="deviceID" placeholder="Device Id" value="<%= typeof deviceID != 'undefined' ? deviceID : '' %>" />
      </div>
    </div>
    <div class="col-md-6">
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <input type="text" name="deviceCode" placeholder="Device Code" value="<%= typeof deviceCode != 'undefined' ? deviceCode : '' %>" />
      </div>
    </div>
  </div>
    <input type="submit" class="btn" value="Sign up" />
   
  </form>
  </div>
  <div class="panels-container">

  <div class="panel left-panel">
  
    <img src="/img/hp.png" class="image" alt="" />
    <div class="content">
      <h3>Sudah Bergabung dengan Kami ?</h3>
      <p>
       Sudah Memiliki Akun? Login Sekarang!.
      </p>
     <a href="/auth/login" class="btn transparent">Login</a>
    </div>  
  </div>
</div>
</div>
</div>

