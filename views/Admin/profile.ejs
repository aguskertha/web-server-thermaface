<h3 style="font-family: san-serif;" class="text-left font-weight-bold ml-3">Profile</h3>
<a style="text-decoration:none; color: rgb(102, 99, 99); margin-left: 15px;" href="/admin/dashboard">Home</a> / Profile
<div class="container rounded bg-white mb-5">

  <div class="row">
      <div class="col-md-6 border-right p-3 ">
        <div class="d-flex justify-content-between align-items-center bg-primary text-white">
          <h4 class="text-right ml-3 mt-2">Personal Information</h4>
      </div>
          <div class="d-flex flex-column align-items-center text-center mb-4">
            <img class="rounded-circle" width="150px" src="<%= typeof user.pictureURL != 'undefined' ? user.pictureURL : '/public/img/profile.png' %>">
            <span class="font-weight-bold"><%= typeof user.name != 'undefined' ? user.name : '' %></span>
            <span class="text-black-50">Admin</span>
            <span> </span>
          </div>
          <div style="font-size: 20px;" class="align-items-center text-center">
            <i class="fas fa-university"> <span class="font-weight-bold">Company :</span></i> <br>
            <p style="font-family: san-serif;"><%= typeof user.company != 'undefined' ? user.company : '' %></p>
          </div>
          <div style="font-size: 20px;" class="align-items-center text-center">
            <i class="fas fa-map-marker"> <span class="font-weight-bold">Location :</span></i> <br>
            <p style="font-family: san-serif;"><%= typeof user.address != 'undefined' ? user.address : '' %></p>
          </div>
          <div style="font-size: 20px;" class="align-items-center text-center">
            <i class="fas fa-mobile"> <span class="font-weight-bold">Contact :</span></i> <br>
            <p style="font-family: san-serif;"><%= typeof user.phone != 'undefined' ? user.phone : '' %></p>
          </div>
          <div style="font-size: 20px;" class="align-items-center text-center">
            <i class="far fa-envelope"> <span class="font-weight-bold">Email :</span></i> <br>
            <p style="font-family: san-serif;"><%= typeof user.email != 'undefined' ? user.email : '' %></p>
          </div>
        </div>
        <div class="col-md-6 border-right p-3">
          <% include ./../partials/messages %> 
          <form action="/auth/profile/update" method="post" enctype="multipart/form-data">
            <div class="d-flex justify-content-between align-items-center bg-primary text-white">
                <h4 class="text-right ml-3 mt-2">Setting Information</h4>
            </div>
            <div class="row mt-3">
              <div class="col-md-6"><label class="labels">Name</label><input type="text" name="name" class="form-control" placeholder="enter Name" value="<%= typeof user.name != 'undefined' ? user.name : '' %>"></div>
                <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" name="phone" class="form-control" placeholder="enter phone number" value="<%= typeof user.phone != 'undefined' ? user.phone : '' %>"></div>
                <div class="col-md-12"><label class="labels">Email</label><input type="email" name="email" class="form-control" placeholder="enter Email" value="<%= typeof user.email != 'undefined' ? user.email : '' %>"></div>
                <div class="col-md-12"><label class="labels">Address</label><input type="text" name="address" class="form-control" placeholder="enter address" value="<%= typeof user.address != 'undefined' ? user.address : '' %>"></div>
                <div class="col-md-12"><label class="labels">Company</label><input type="text" name="company" class="form-control" placeholder="enter Company" value="<%= typeof user.company != 'undefined' ? user.company : '' %>"></div>
            </div>
            <div class="row mt-3">
              <div class="col-md-12">
                <label class="labels">Image &nbsp;</label><input type="file" name="picture" value="">
              </div>
            </div>
            <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
          </form>
        </div>
  
     
  </div>
</div>
