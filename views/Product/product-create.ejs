<div class="container">
  <div class="forms-container"  align="center">
      <h1 class="text-info mt-3">Create Product</h1>
      <br>
      <% include ./../partials/messages %> 
      <a href="/" class="float-start ms-5 h1" role="button"><i class="bi bi-arrow-left-circle-fill"></i></a>
      <form action="/product" method="post" enctype="multipart/form-data" class="sign-in-form">
        <% include ./../partials/messages %> 
        <div class="row">
          <div class="col-md-12" align="center">
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="name" placeholder="Name" value="<%= typeof name != 'undefined' ? name : '' %>" required />
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="number" name="price" placeholder="Price" value="<%= typeof price != 'undefined' ? price : '' %>" required />
            </div>
          </div>
          <div class="col-md-6">
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="number" name="stock" placeholder="Stock" value="<%= typeof stock != 'undefined' ? stock : '' %>" required />
            </div>
          </div>
          <div class="col-md-12" align="center">
            <hr>
            <label for="">Description</label>
            <textarea class="form-control" rows="5" name="description" value="<%= typeof description != 'undefined' ? description : '' %>" required></textarea>
          </div>
          <div class="col-md-12" align="center">
            <hr>
            <label for="formFileLg" class="form-label">Image</label>
            <input id="input-b1" name='picture' type="file" class="file" data-browse-on-zone-click="true" required>
          </div>
        </div>
        <!-- <input type="submit" class="btn btn-primary my-5" value="Create" /> -->
    
      </form>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/buffer.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/filetype.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/piexif.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/plugins/sortable.min.js" type="text/javascript"></script>
<script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.0/js/fileinput.min.js"></script>

